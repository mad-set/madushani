<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectLogin"
    android:background="@drawable/login_background"
>

    <TextView
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:gravity="left"
        android:padding="10dp"
        android:text="Select Type"
        android:textColor="@color/colourMain"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnCus"
        android:layout_width="312dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="258dp"
        android:background="@drawable/buttonstyle2"
        android:backgroundTint="#13312C"
        android:gravity="center"
        android:text="customer"
        android:textColor="@color/colourMain"
        app:layout_constraintStart_toEndOf="@+id/btnsup" />

    <Button
        android:id="@+id/btnsup"
        android:layout_width="312dp"
        android:layout_height="59dp"
        android:layout_above="@+id/btnCus"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonstyle"
        android:backgroundTint="#131214"
        android:gravity="center"
        android:text="Supplier"
        android:textColor="@color/colourMain" />

</RelativeLayout>